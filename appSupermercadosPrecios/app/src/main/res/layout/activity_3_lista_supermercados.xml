        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-2dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:text="MENÃš"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/button3"
        android:layout_width="122dp"
        android:layout_height="131dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#136281"
        android:drawableTop="@drawable/tienda64px"
        android:text="Despensa Familiar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.169"
        app:layout_constraintStart_toEndOf="@+id/btnDolarcity"
        app:layout_constraintTop_toBottomOf="@+id/cl3" />

    <Button
        android:id="@+id/btnDolarcity"
        android:layout_width="122dp"
        android:layout_height="131dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="#F44336"
        android:drawableTop="@drawable/tienda64px"
        android:onClick="irAPrecios"
        android:text="Dolar City"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl3" />

    <Button
        android:id="@+id/button4"
        android:layout_width="122dp"
        android:layout_height="131dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="364dp"
        android:backgroundTint="#5DB53D"
        android:drawableTop="@drawable/tienda64px"
        android:text="Super Selectos"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.16"
        app:layout_constraintStart_toEndOf="@+id/button5"
        app:layout_constraintTop_toBottomOf="@+id/button3" />

    <Button
        android:id="@+id/button5"
        android:layout_width="122dp"
        android:layout_height="131dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="364dp"
        android:backgroundTint="#3FA8D8"
        android:drawableTop="@drawable/tienda64px"
        android:text="Super 99"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnDolarcity" />


</androidx.constraintlayout.widget.ConstraintLayout>