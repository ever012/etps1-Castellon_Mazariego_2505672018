<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".segundoActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvwCalculo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CÃ¡lculo de IMC"
                android:textAlignment="center"
                android:textSize="34sp" />

            <TextView
                android:id="@+id/tvwPeso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ingrese su peso (libras):" />

            <EditText
                android:id="@+id/edtpeso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="peso en Libras"
                android:inputType="number|textPersonName" />

            <TextView
                android:id="@+id/tvwAltura"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ingrese su Altura(m):" />

            <EditText
                android:id="@+id/edtAltura"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Altura en metros"
                android:inputType="number|textPersonName" />

            <Button
                android:id="@+id/btnCalcularIMC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#009688"
                android:onClick="calcularIMC"
                android:text="Calcular IMC" />

            <TextView
                android:id="@+id/tvwResultados"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>